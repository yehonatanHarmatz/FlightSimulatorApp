<Window x:Class="FlightSimulatorApp.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulatorApp"
        mc:Ignorable="d"
        Title="ConnectionWindow" Height="537.097" Width="800" Closing="CloseWindow">
    <Grid>
        <TextBlock Text="IP:" FontSize="30" Margin="295,142,457.6,317.2"></TextBlock>
        <TextBlock Text="Port:" FontSize="30" Margin="272,191,457.6,268.2"></TextBlock>
        <TextBox x:Name="PortTextBox" Text="{Binding Port}" FontSize="30" Margin="370,141,288.6,317.2" TextChanged="ChangePort"></TextBox>
        <TextBox x:Name="IPTextBox" Text="{Binding Ip}" FontSize="30" Margin="370,190,232.6,268.2" TextChanged="ChangeIP"></TextBox>
        <Button Content="Connect" FontSize="30" Margin="311,277,343.6,173.2" Click="Connect"></Button>
    </Grid>
</Window>