<UserControl x:Class="FlightSimulatorApp.views.Connection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulatorApp.views"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <UniformGrid Rows="1">
                <Button FontSize="45" Click="Connect">
                    <Label>
                        <Label Content="Connect" VerticalAlignment="Center" FontSize="20" HorizontalAlignment="Center"></Label>
                    </Label>
                </Button>
                <Button FontSize="45"  Click="Disonnect">
                    <Label>
                        <Label  Content="Disconnect" VerticalAlignment="Center" FontSize="20" HorizontalAlignment="Center"></Label>
                    </Label>
                </Button>
            </UniformGrid>
            <Label Content="{Binding Text}" VerticalAlignment="Center" FontSize="20" HorizontalAlignment="Center"></Label>

        </StackPanel>
    </Grid>
</UserControl>
